<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".blood"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/buttonb1"
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:text="A+"
            android:textColor="#F44336"
            android:textSize="40dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:srcCompat="@drawable/ic_baseline_search_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:gravity="center"
                android:text="Donor Details"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonb2"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:textSize="40sp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:srcCompat="@drawable/ic_baseline_search_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:gravity="center"
                android:text="Find Donor"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold" />

     </LinearLayout>

     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/buttonb3"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:textSize="40sp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_baseline_account_circle_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="My Profile"
                android:layout_marginTop="15dp"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#F44336"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonb4"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:textSize="40sp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_baseline_info_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Facts"
                android:layout_marginTop="15dp"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#F44336"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/buttonb5"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:textSize="40sp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_baseline_blood_bank_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Blood Bank"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#F44336"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonb6"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:textSize="40sp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_baseline_organization_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Organization"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#F44336"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/buttonb7"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:textSize="40sp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/ic_baseline_about_24" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="About App"
                android:layout_marginTop="15dp"
                android:textSize="30sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#F44336"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonb8"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape3"
            android:orientation="vertical"
            android:textSize="40sp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_baseline_feedback_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:gravity="center"
                android:text="User Feedback"
                android:textColor="#F44336"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

