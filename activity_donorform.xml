<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".donorform">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="45dp"
        android:textColor="#F44336"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Donate Blood"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Name:"
            android:textColor="#F44336"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/firstName"
            android:layout_width="142dp"
            android:layout_height="50dp"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:textColor="#F44336"
            android:textColorHint="#F44336"
            android:textSize="20dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/lastName"
            android:layout_width="158dp"
            android:layout_height="50dp"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:textColor="#F44336"
            android:textColorHint="#F44336"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape2">
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Date of birth:"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/p_date"
            android:layout_width="191dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="DD/MM/YYYY"
            android:inputType="date"

            android:textColor="#F44336"
            android:textColorHint="#F44336"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Gender"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="25dp" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="29dp" />
        <CheckBox
            android:id="@+id/checkboxMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:buttonTint="#0A0E0E"
            android:textStyle="italic"
            android:textColor="#F44336"
            android:text="Male" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="29dp" />
        <CheckBox
            android:id="@+id/checkboxFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:buttonTint="#050707"
            android:backgroundTint="#F44336"
            android:textStyle="italic"
            android:textColor="#F44336"
            android:text="Female" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape2">
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Blood Group"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/bloodgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textColorHint="#F44336"
            android:hint="Blood Group"
            android:textColor="#F44336"
            android:textStyle="italic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape2">
        <TextView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Address"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/p_address"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textColor="#F44336"
            android:textColorHint="#F44336"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape2">
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Mobile Number"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/p_mobilenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:textColorHint="#F44336"
            android:hint="Number"
            android:textColor="#F44336"
            android:textStyle="italic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape2">
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Place to Donate"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="31dp" />
        <EditText
            android:id="@+id/p_placetodonate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Place"
            android:textColorHint="#F44336"
            android:textColor="#F44336"
            android:textStyle="italic"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message to Reciever:"
            android:textColor="#F44336"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <EditText
            android:id="@+id/p_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Message"
            android:inputType="textMultiLine"
            android:textColor="#F44336"
            android:textColorHint="#F44336"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/sub1234"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#FDF9F9"
        android:background="#F44336"/>

</LinearLayout>