<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".termsconditions"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#F44336"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:background="@drawable/shape2"
            android:textSize="18dp"
            android:text="1. The donor must be fit and healthy and should not be suffering from any transmittable disease"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:background="@drawable/shape2"
            android:textSize="18dp"
            android:text="2. The donor must be 18-65 years old and minimum 50kg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="3. Pulse rate should be between 50-100 without irregualrities" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="4. Haemoglobin level should be a minimum of 12.5 g/dL" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="5. Blood pressure- Diastolic: 50–100 mm Hg, Systolic: 100–180 mm Hg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="6.Body temperature- Should be normal, with an oral temperature not exceeding 37.5 °C" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="7.The time period between successive blood donations should be more than 3 months." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Ineligilabity Criteria"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:background="@drawable/shape2"
            android:textSize="18dp"
            android:text="I. A person who has been tested HIV positive."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="II. Individuals suffering from ailments like cardiac arrest, hypertension, blood pressure, cancer, epilepsy, kidney ailments and diabetes."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="III. A person who has undergone ear/body piercing or tattoo in the past 6 months."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="IV. Individuals who have undergone immunization in the past 1 month."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="V. Individuals treated for rabies or received Hepatitis B vaccine in the past 6 months."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:text="VI. A person who has consumed alcohol in the past 24 hours."
            android:textColor="#F44336"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="VII. Women who are pregnant or breastfeeding."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="VIII. Individuals who have undergone major dental procedures or general surgeries in the past 1 month."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="IX. Women who have had miscarriage in the past 6 months."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="X. Individuals who have had fits, tuberculosis,allergic disorders in the past."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F44336"
            android:textSize="18dp"
            android:background="@drawable/shape2"
            android:text="XI. Individuals who currently have asthma with active symptoms, and severe asthma patients."/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:buttonTint="#040405"
            android:text="I agree to the above mentioned terms and conditions" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/button_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#F44336"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="Submit" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

    </LinearLayout>
</ScrollView>
