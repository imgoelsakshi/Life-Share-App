<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="#F44336"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Association Form"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape2">
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="Name" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="37dp" />
        <EditText
            android:id="@+id/o_name"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Enter Name"
            android:textColorHint="#F44336"
            android:inputType="textPersonName"
            android:textColor="#F44336"
            android:textStyle="italic" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape2">
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Date of establishment"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="20dp"
            android:layout_height="31dp" />

        <EditText
            android:id="@+id/o_date"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="DD/MM/YYYY"
            android:inputType="date"
            android:textColor="#F44336"
            android:textColorHint="#F44336"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/shape2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Type"
            android:textColor="#F44336"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GO"
            android:buttonTint="#070606"
            android:textColor="#F44336"
            android:textSize="25dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/ngo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NGO"
            android:buttonTint="#090505"
            android:textColor="#F44336"
            android:textSize="25dp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape2">
        <TextView
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Address"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/o_address"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:ems="10"
            android:textColorHint="#F44336"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textColor="#F44336"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape2">
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="25dp"
            android:text="Mobile Number"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/o_mobilenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColorHint="#F44336"
            android:inputType="number"
            android:hint="Number"
            android:textColor="#F44336"
            android:textStyle="italic"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape2">
        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#F44336"
            android:text="Location of Camp"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="50dp" />
        <EditText
            android:id="@+id/o_camplocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Place"
            android:textColorHint="#F44336"
            android:textColor="#F44336"
            android:textStyle="italic"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message:"
            android:textColor="#F44336"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/o_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Message"
            android:inputType="textMultiLine"
            android:textColor="#F44336"
            android:textColorHint="#F44336"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/sub98756"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:background="#F44336"/>


</LinearLayout>