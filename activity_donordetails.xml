<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".donordetails">

    <Button
        android:id="@+id/retrieve"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#F44336"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:text="Retrieve" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:text="The donors matching your requirements are:"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#F44336"
        android:gravity="center"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameView"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bgView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=" " />

        <TextView
            android:id="@+id/placeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=" " />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameView2"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bgView2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=" " />

        <TextView
            android:id="@+id/placeView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=" " />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameView3"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bgView3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=" " />

        <TextView
            android:id="@+id/placeView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text=" " />
    </LinearLayout>

    <Button
        android:id="@+id/button357"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#F44336"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_gravity="center"
        android:text="Contact" />

</LinearLayout>